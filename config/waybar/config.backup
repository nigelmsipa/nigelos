{
    "layer": "top",
    "position": "top", 
    "height": 24,
    "spacing": 4,
    
    "modules-left": ["custom/launcher", "hyprland/workspaces", "custom/power", "custom/apps"],
    "modules-center": [],
    "modules-right": ["custom/cloud", "network", "custom/triangle", "custom/zero", "pulseaudio", "custom/one", "temperature", "custom/two", "clock"],

    "custom/launcher": {
        "format": "▼",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "format": "{name}",
        "disable-scroll": true
    },

    "custom/power": {
        "format": "⏻",
        "tooltip": false
    },

    "custom/apps": {
        "format": "📁 🔒 📊 ⚙️ -",
        "tooltip": false
    },

    "custom/cloud": {
        "format": "☁",
        "tooltip": false
    },

    "network": {
        "format": "📡 {bandwidthDownBits}",
        "format-disconnected": "📡 0.0B/s",
        "interval": 1
    },

    "custom/triangle": {
        "format": "▲ 5",
        "tooltip": false
    },

    "custom/zero": {
        "format": "📶 0%",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "🔊 {volume}%",
        "format-muted": "🔇"
    },

    "custom/one": {
        "format": "🔋 1%",
        "tooltip": false
    },

    "temperature": {
        "format": "🌡 {temperatureC}°C"
    },

    "custom/two": {
        "format": "📊 2%",
        "tooltip": false
    },

    "clock": {
        "format": "{:%H:%M}",
        "tooltip": false
    }
}
